<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:background="@drawable/btn_shape"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="47dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:background="@drawable/btn_shape"
        android:text="Simple Game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sensors" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_step_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_shape"
        android:text="Step Calculator"
        app:layout_constraintEnd_toEndOf="@+id/btn_game"
        app:layout_constraintStart_toStartOf="@+id/btn_game"
        app:layout_constraintTop_toBottomOf="@+id/btn_game" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_speedometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_shape"
        android:text="Speedometer"
        app:layout_constraintEnd_toEndOf="@+id/btn_game"
        app:layout_constraintStart_toStartOf="@+id/btn_game"
        app:layout_constraintTop_toBottomOf="@+id/btn_step_counter" />

</androidx.constraintlayout.widget.ConstraintLayout>